/* pages/diandan/diandan.wxss */

/* reset */

page {
  background-color: #f0f1f1;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

checkbox, radio {
  margin-right: 10rpx;
}

button {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

form {
  width: 100%;
}

input {
  width: 100%;
}

/* 页面 */

.list-left-menu {
  width: 160rpx;
  font-size: 26rpx;
  position: relative;
  left: 0px;
  z-index: 10;
}

.list-right-menu {
  width: 576.68rpx;
  height: 360.36rpx;
  float: right;
  z-index: 11;
  margin-top: -542rpx;
  /* padding-top: 0rpx; */
  background-color: white;
  padding: 9rpx;
}

.list-left-menu-box-unselect {
  padding: 10rpx;
  border-bottom: 1px solid #e3e3e3;
  height: 72rpx;
  color: #767a7f;
  background: #f0f1f1;
}

.list-left-menu-box-selected {
  padding: 10rpx;
  height: 72rpx;
  color: #3b8668;
  border-left: 3px solid #3b8668;
  background: white;
}

.list-menu-name {
  text-align: center;
  margin-top: 14rpx;
}

.list-tab {
  margin-left: 164rpx;
  font-size: 25rpx;
  background: #3b8668;
  color: white;
  padding-left: 31rpx;
  height: 56rpx;
  vertical-align: middle;
  /* 把文字垂直居中 */
  line-height: 56rpx;
}

.content-list {
  margin-left: 164rpx;
  display: flex;
  border-bottom: 1px solid #e3e3e3;
  background-color: white;
  padding-left: -30rpx;
}

.list-image {
  width: 108rpx;
  margin-top: 31rpx;
}

.list-image-box {
  width: 160rpx;
  height: 72px;
  text-align: center;
}

.issue-name {
  width: 200px;
  font-size: 30rpx;
  margin-top: 30rpx;
  color: #2c2f33;
  font-weight: 900;
  font-family: "等线";
}

.scroll-view-t {
  margin-top: -157rpx;
}

.plus-icon {
  float: right;
  color: #e53085;
  font-size: 46rpx;
  margin-right: 48rpx;
  margin-top: -10rpx;
}

.icon-li-circle {
  margin-left: 15px;
  font-size: 20px;
}

.plus-icon {
  float: right;
  color: #3b8668;
  font-size: 46rpx;
}

/* 购物车 */

.operate-bar {
  z-index: 10001;
  /* 把div固定在底部 */
  position: fixed;
  bottom: 0px;
  height: 55px;
  width: 100%;
  display: flex;
}

.gouwuche {
  width: 75%;
  background: #3c3e41;
  height: 100%;
}

.gouwuche-icon {
  font-size: 40px;
  color: #87888e;
  margin-left: 10px;
  position: relative;
  margin-top: -10px;
}

.activity-color {
  color: #ff9c35;
}

.number-msg {
  padding: 1px 7px;
  border-radius: 50%;
  background: red;
  color: white;
  font-size: 14px;
  position: absolute;
  text-align: center;
  top: 0px;
  right: -5px;
}

.gouwuche-price {
  color: white;
  display: flex;
  align-items: center;
  margin-left: 10px;
  font-size: 15px;
  margin-top: -12px;
}

.submit-btn {
  height: 100%;
  background: #2c2f33;
  width: 25%;
  display: flex;
}

.submit-btn-label {
  color: #909498;
  font-size: 15px;
  margin: auto;
}

.activity-color-bg {
  background: #ff9c35;
}

.color-white {
  color: white;
}

/* 选择弹窗 */

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box_ad {
  margin-left: 3%;
  width: 93%;
  overflow: hidden;
  position: fixed;
  top: 15%;
  z-index: 1001;
  background: #fff;
  border-radius: 4px;
}

.drawer_content_ad {
  height: 289px;
  width: 100%;
  padding: 10px;
}

.select-line-nav {
  font-size: 12px;
  margin-left: 5px;
  margin-top: 10px;
  color: #ababab;
}

.select-tab {
  padding: 5px 6px;
  border: 1px solid #ababab;
  font-size: 12px;
  border-radius: 5px;
  margin: 5px;
  color: #ababab;
  z-index: 1002;
}

.select-active {
  color: #3b8668;
  border: 1px solid #3b8668;
}

.select-price {
  font-size: 14px;
  color: #3b8668;
  margin-top: 20px;
  display: flex;
  align-items: center;
  margin-left: 10px;
}

.btn-putIn {
  height: 40px;
  width: 100px;
  font-size: 14px;
  background: #3b8668;
  color: white;
  margin-right: 20px;
}
